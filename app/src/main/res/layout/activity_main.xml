<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormActivity">
    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButton"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/inputConfirm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="184dp"
            android:layout_marginEnd="139dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/name"
            android:layout_width="66dp"
            android:layout_height="17dp" android:id="@+id/promptName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="161dp"/>
    <TextView
            android:text="@string/email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/promptEmail"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/promptName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
    />
    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/promptPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/promptEmail"/>
    <TextView
            android:text="@string/confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/promptConfirm"
            android:textSize="14sp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/promptPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
    />
    <EditText
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp" android:layout_marginStart="75dp"
            app:layout_constraintStart_toEndOf="@+id/promptName"
            android:autoText="false" android:textSize="14sp"
            android:maxLength="10" android:layout_marginEnd="110dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/inputEmail"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/inputName"
            android:layout_marginStart="52dp"
            app:layout_constraintStart_toEndOf="@+id/promptEmail" android:textSize="14sp"
            android:layout_marginEnd="108dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/inputPassword"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toEndOf="@+id/promptPassword" android:textSize="14sp"
            android:layout_marginEnd="108dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/inputConfirm"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/inputConfirm"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/promptConfirm"
            android:textSize="14sp"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/inputPassword"
            android:layout_marginEnd="109dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="241dp"
            android:layout_height="93dp" android:id="@+id/message"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/inputName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="111dp" android:layout_marginEnd="67dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:inputType="textNoSuggestions" android:scrollbarStyle="outsideOverlay" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.722"/>

</androidx.constraintlayout.widget.ConstraintLayout>